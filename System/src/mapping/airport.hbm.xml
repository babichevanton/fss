<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
 
<hibernate-mapping>
	<class lazy="false" name="springapp.fss.pojo.Airport" table="Airport">
		<id name="id" type="int" column="idAirport" >
			<generator class="identity"/>
		</id>
	
		<property name="name" column="name" type="string"/>
		<property name="city" column="city" type="string"/>
		<property name="phone_number" column="phone_number" type="string"/>
		
		<set name="flights_dptr" inverse="true" lazy="false">
			<key column="dptr_airport"/>
			<one-to-many class="springapp.fss.pojo.Flight"/>
		</set>
		<set name="flights_arr" inverse="true" lazy="false">
			<key column="arr_airport"/>
			<one-to-many class="springapp.fss.pojo.Flight"/>
		</set>
	</class>
</hibernate-mapping>